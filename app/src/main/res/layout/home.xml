<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B580FF"
    tools:context=".Home">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:lineSpacingExtra="18sp"
        android:paddingLeft="130dp"
        android:text="@string/app_name"
        android:textAllCaps="true"
        android:textSize="30sp"
        android:textStyle="bold"
        android:visibility="visible" />


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textView2"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="30dp"
        android:alignmentMode="alignMargins"
        android:columnCount="2"
        android:rowCount="3">

        <ImageButton

            android:id="@+id/icon1"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_row="2"
            android:layout_column="1"
            android:onClick="ambulance"
            android:scaleType="fitCenter"

            app:srcCompat="@drawable/icon1" />

        <ImageButton

            android:id="@+id/icon2"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_row="1"
            android:layout_column="1"
            android:onClick="doctor"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/icon2" />

        <ImageButton

            android:id="@+id/icon3"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_marginLeft="5dp"
            android:onClick="report"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/icon3" />

        <ImageButton

            android:id="@+id/icon4"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_marginLeft="5dp"
            android:onClick="hospital"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/icon4" />

        <ImageButton

            android:id="@+id/icon5"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_row="0"
            android:layout_column="1"
            android:onClick="diagnostic"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/icon5" />

        <ImageButton

            android:id="@+id/icon6"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_marginLeft="5dp"
            android:onClick="pharmacology"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/icon6" />

    </GridLayout>


</RelativeLayout>
